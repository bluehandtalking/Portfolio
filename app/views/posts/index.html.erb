<% content_for :body do %>
<div class="small-9 columns blog">
<h1 id="list-hdr">Current Creative Musings</h1>
<h1 id="edit-hdr">Edit Post</h1>
<div id="edit_place"></div>
<table>
  <thead>
    <tr>
      <th>Reflections</th>
      <th>Synopsis</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>
      <th>Publish</th>
    </tr>
  </thead>
  <tbody>
    <% unless  @posts.blank?%>
      <% @posts.each do |post| %>
        <tr id="<%= dom_id(post) %>">
          <td><%= post.title %></td>
          <td><%= post.description %></td>
          <td><%= link_to 'Show', post %></td>
          <% if current_user && policy(post).update? %>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <% end %>
          <% if current_user && policy(post).destroy? %>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
          <% if current_user && policy(post).publish? %>
            <td><%= link_to 'Publish', controller: 'posts', action: 'publish', id: post %></td> 
          <% end %>
        </tr>
      <% end %>
    <% end %>
    <tr>
      <td>
        <% if current_user && policy(Post.new).create? %>
          <%= link_to 'New Post', new_post_path %>
        <% end %>
      </td>
    </tr>     
  </tbody>
 </table>
 </div>
<% end %>
